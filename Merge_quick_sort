-------------------------------------------------------------------MERGE SORT--------------------------------------------------------------------------------

#include <iostream>
#include <vector>
using namespace std;

void merge(vector<int> &arr, int l, int m, int r) {
    int n1 = m - l + 1;
    int n2 = r - m;

    vector<int> left(n1);
    vector<int> right(n2);

   
    for (int i = 0; i < n1; i++)
        left[i] = arr[l + i];

    for (int j = 0; j < n2; j++)
        right[j] = arr[m + 1 + j];

    int i = 0, j = 0, k = l;

    
    while (i < n1 && j < n2) {
        if (left[i] <= right[j])
            arr[k++] = left[i++];
        else
            arr[k++] = right[j++];
    }

    
    while (i < n1)
        arr[k++] = left[i++];

    while (j < n2)
        arr[k++] = right[j++];
}


void mergeSort(vector<int> &ar,int l,int r){
    if(l<r){
        int m=(l+r)/2;
        mergeSort(ar,l,m);
        mergeSort(ar,m+1,r);
        merge(ar,l,m,r);
    }
}

void display(vector<int> ar){
    for(int i=0;i<ar.size();i++){
        cout<<ar[i]<<" ";
    }
    cout<<endl;
}

int main() {
    vector<int> arr={12,5,33,4,8,99,231,54};
    display(arr);
    mergeSort(arr,0,arr.size()-1);
    display(arr);

    return 0;
}

-------------------------------------------------------------------QUICK SORT--------------------------------------------------------------------------------


#include <iostream>
#include <vector>
using namespace std;

int partitionArray(vector<int> &A, int p, int r) {
    int x = A[r];     
    int i = p - 1;

    for (int j = p; j <= r - 1; ++j) {
        if (A[j] <= x) {
            i = i + 1;
            swap(A[i], A[j]);  
        }
    }
    swap(A[i + 1], A[r]);       
    return i + 1;
}

void quicksort(vector<int> &A, int p, int r) {
    if (p < r) {
        int q = partitionArray(A, p, r);
        quicksort(A, p, q - 1);
        quicksort(A, q + 1, r);
    }
}
void display(vector<int> ar){
    for(int i=0;i<ar.size();i++){
        cout<<ar[i]<<" ";
    }
    cout<<endl;
}
int main() {
    vector<int> A = {10, 7, 8, 9, 1, 5};
    int n = A.size();
    display(A);
    quicksort(A, 0, n - 1);
    display(A);

    return 0;
}
